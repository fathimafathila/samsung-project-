<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminbackground"
    tools:context=".AdminView.CreateUser.CreateAddressActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/topNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/screen1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:backgroundTint="@color/gray"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_toRightOf="@+id/screen1"
                android:layout_marginTop="15dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/screen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_toRightOf="@+id/screen1"
                android:background="@drawable/circle"
                android:backgroundTint="@color/gray"
                android:gravity="center"
                android:text="2"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_toRightOf="@+id/screen2"
                android:layout_marginTop="15dp"
                android:background="@color/black"/>
            <TextView
                android:id="@+id/screen3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_toRightOf="@+id/screen2"
                android:background="@drawable/circle"
                android:backgroundTint="@color/lightgrey"
                android:gravity="center"
                android:text="3"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topNavigation"
            android:gravity="center">
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Address"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:layout_marginTop="70dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/txtAddressType"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Address Type">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtAddressType"
                    android:inputType="text"
                    android:text="Home"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtApartment"
                android:layout_width="match_parent"
                android:layout_below="@+id/txtAddressType"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Apartment/Home Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtApartment"
                    android:layout_width="match_parent"
                    android:text="Apt 603"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/txtStreet"
                android:layout_below="@+id/txtApartment"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Street">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtStreet"
                    android:text="760 Moahwk Road West"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtCity"
                android:layout_width="match_parent"
                android:layout_below="@+id/txtStreet"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="City">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCity"
                    android:layout_width="match_parent"
                    android:text="Hamilton"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtState"
                android:layout_width="match_parent"
                android:layout_below="@+id/txtCity"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="State">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtState"
                    android:layout_width="match_parent"
                    android:text="Ontario"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtZipcode"
                android:layout_width="match_parent"
                android:layout_below="@+id/txtState"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Zipcode">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtZipcode"
                    android:layout_width="match_parent"
                    android:text="L9C6P6"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtCountry"
                android:layout_width="match_parent"
                android:layout_below="@+id/txtZipcode"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Country">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCountry"
                    android:layout_width="match_parent"
                    android:text="Canada"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/mainContent">

            <Button
                android:id="@+id/savebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red_color"
                android:padding="10dp"
                android:text="Save" />


            <Button
                android:id="@+id/nextbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:onClick="btn_next"
                android:layout_toRightOf="@+id/savebutton"
                android:backgroundTint="@color/red_color"
                android:padding="10dp"
                android:text="Next" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>

