<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/securitybackground"
    android:padding="20dp"
    tools:context=".AdminView.SecurityQuestionActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/txtSecurityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Security Question" />

            <TextView
                android:id="@+id/txtSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp"
                android:paddingStart="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Security Question" />

            <EditText
                android:id="@+id/edtSecurity"
                android:layout_width="330dp"
                android:layout_height="37dp"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:text="dog"
                android:background="@drawable/security_border"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnProceed"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/red_color"
                android:background="@drawable/security_border"
                android:text="PROCEED"
                android:textSize="22dp"
                android:padding="10dp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>