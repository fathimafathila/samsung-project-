<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UsersView.InitialInterview.MonitoringResourceRequest.MonitoringFragment">


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtStartDate"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="10dp"
                android:hint="Monitoring Start Date"
                android:background="@color/lightgrey"
                app:hintTextColor="@color/primary_color"
                android:textColorHint="@color/primary_color"
                android:text=""
                android:textSize="16sp"
                >

                <AutoCompleteTextView
                    android:id="@+id/edtStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightgrey"
                android:hint="Monitoring End Date"
                android:layout_below="@id/txtStartDate"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="16sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/edtEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtMonitoringDay"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtEndDate"
                android:background="@color/lightgrey"
                android:hint="No of days left to be monitored?"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="16sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/edtMonitoringDay"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:theme="@style/Theme.CovidWatch"
                android:id="@+id/txtMonitoringType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@+id/txtMonitoringDay"
                android:hint="Monitoring Type"
                android:textColor="@color/primary_color"
                android:textColorHint="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/edtMonitoringType"
                    android:layout_width="match_parent"
                    android:theme="@style/Theme.CovidWatch"
                    android:layout_height="55dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="5"
                    android:ems="10"
                    android:background="@color/lightgrey"
                    android:clickable="true"
                    android:completionThreshold="5"
                    android:textSize="16dp"
                    tools:ignore="KeyboardInaccessibleWidget" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtContactNumber"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtMonitoringType"
                android:background="@color/lightgrey"
                android:hint="Phone number for monitoring"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="16sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/edtContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightgrey"
                android:layout_below="@+id/txtContactNumber"
                android:hint="Email for monitoring"
                android:text=""
                android:textColorHint="@color/primary_color"
                android:textSize="16sp"
                app:hintTextColor="@color/primary_color">

                <AutoCompleteTextView
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/lightgrey"
                    android:textColor="@color/primary_color"
                    android:padding="5dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="490dp"
                android:backgroundTint="@color/red_color"
                android:text="Cancel" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="490dp"
                android:layout_marginRight="60dp"
                android:backgroundTint="@color/red_color"
                android:text="Save" />

        </RelativeLayout>


    </ScrollView>



</FrameLayout>
